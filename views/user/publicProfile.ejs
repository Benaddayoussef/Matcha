<div class="container mt-5 py-5">

    <% var images = data.images; %>
    <% var profile = images.findIndex(image => {return image.imgIndex == 'profile'})%>
    <% var img1 = images.findIndex(image => {return image.imgIndex == 'img1'})%>
    <% var img2 = images.findIndex(image => {return image.imgIndex == 'img2'})%>
    <% var img3 = images.findIndex(image => {return image.imgIndex == 'img3'})%>
    <% var img4 = images.findIndex(image => {return image.imgIndex == 'img4'})%>
    <div class="row col-8 mx-auto mb-5 pt-5" style="height:280px">
        <div class="col-lg-5 col-md-4 col-sm-12 text-center">
            <% if(profile != -1 ) {%>
                <img class="profileImg rounded-circle" src="<%= images[profile].imgPath %>" alt="test"/>
            <%}%>
            <span class="status bg-success"></span>
        </div>
        <div class="col-7">
            <h2><%= data.firstName %> <%= data.lastName %></h2>
            <span>
                <% var fameRating = data.fameRating; %>
                <% for (i = 0; i < fameRating; i++) {%>
                    ‚≠ê
                <% }%>
            </span>
            <p class="my-3"><%= data.bio %></p>
            <ul class="tags">
                <% var tags = data.tags %>
                <% tags.forEach(tag => { %>
                    <li class="tag"><%= tag.topic %></li>    
                <%})%>
            </ul>
            <button class="btn btn-danger">like</button>
            <button class="btn btn-warning">report fake account</button>
            <button class="btn btn-warning">Block</button>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="container  row" style="height: 709px; margin-top: 92px;">

        <div class="col-4">
            <% if(img1 != -1) {%>
                <img class="w-100 rounded" src="<%= images[img1].imgPath %>">
            <%}%>
        </div>
        <div class="col-4">
            <div class="w-100 h-50 mb-2">
                    <% if(img2 != -1) {%>
                        <img  class="w-100 rounded" src="<%= images[img2].imgPath %>">
                    <%}%>
            </div>
            <div class="w-100 h-50">
                    <% if(img3 != -1) {%>
                        <img  class="w-100 rounded" src="<%= images[img3].imgPath %>">
                    <%}%>
            </div>
        </div>
        <div class="col-4">
                <% if(img4 != -1) {%>
                    <img class="w-100 rounded" src="<%= images[img4].imgPath %>">
                <%}%>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/profile/publicProfile.js"></script>